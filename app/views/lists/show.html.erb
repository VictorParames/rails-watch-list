<div class="container">
  <h1><%= @list.name %></h1>
  <% if @list.bookmarks.any? %>
    <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-md-6">
          <div class="movie-list">
            <h3><%= bookmark.movie.title %></h3>
            <p class="text-muted"><%= bookmark.comment %></p>
            <%= link_to "Remove", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm btn-custom" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No bookmarks yet.</p>
  <% end %>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success btn-custom mt-3" %>
  <%= link_to "Back to all lists", lists_path, class: "btn btn-secondary btn-custom mt-3" %>
</div>
