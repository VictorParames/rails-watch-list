<div class="container">
  <h1 class = 'text-center'> New List</h1>
  <div class="form-container">
    <%= simple_form_for @list, html: { class: "form" } do |f| %>
      <%= f.input :name, input_html: { class: "form-control" }, label: false, placeholder: "Enter list name" %>
      <%= f.submit "Create List", class: "btn btn-danger btn-custom mt-2" %>
      <%= link_to "Back", lists_path, class: "btn btn-dark btn-custom mt-2" %>
    <% end %>
  </div>
</div>
